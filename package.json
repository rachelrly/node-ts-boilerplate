{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for Node with TypeScript and Jest",
  "main": "/dist/src/index.js",
  "scripts": {
    "test": "tsc && jest --no-cache dist/tests",
    "start": "rm -rf tsc && node /dist/src/index.js",
    "dev": "nodemon src/index.ts"
  },
  "author": "Rachel Reilly",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "tests/jest.config.js"
    ]
  }
}
